<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/logo"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/roundedbg2">
                <EditText
                    android:id="@+id/et_firstnameignup"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="50dp"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/et_emailsignup"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:inputType="textEmailAddress"/>
                <EditText
                    android:id="@+id/et_phoneignup"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:hint="No. Telpon"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:inputType="phone"/>
                <EditText
                    android:id="@+id/et_passwordsignup"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:hint="Password"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:inputType="textPassword"
                    android:textSize="18dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_password_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/black">
                    <EditText
                        android:id="@+id/et_confirmpassword"
                        android:layout_width="341dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:hint="Konfirmasi Password"
                        android:gravity="center_horizontal"
                        android:inputType="textPassword"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? Log In "
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#FF0404"
                        android:text="here"/>
                </LinearLayout>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="64dp"
                    android:background="@drawable/roundedbtn"
                    android:text="SIGN UP"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:onClick="Sign_up"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>